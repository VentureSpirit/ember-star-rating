{{#each stars as |star index|}}
  <svg width={{width}} height={{height}} xmlns="http://www.w3.org/2000/svg" viewBox={{viewBox}}>
    <defs>
      <linearGradient id="{{elementId}}-star-{{index}}" x1="0%" y1="0%" x2="100%" y2="0%">
        {{!-- using alpha channel in stop-color does not work on Safari --> using stop-opacity --}}
        <stop class="star-rating-filled" offset="0%" stop-color={{fillColor}} stop-opacity={{fillOpacity}}></stop>
        <stop class="star-rating-base" offset="0%" stop-color={{baseColor}} stop-opacity={{baseOpacity}}></stop>
      </linearGradient>
    </defs>
    <path fill="url(#{{elementId}}-star-{{index}})" d={{svgPath}}></path>
  </svg>
{{/each}}
